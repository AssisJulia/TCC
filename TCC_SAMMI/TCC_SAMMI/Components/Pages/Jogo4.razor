
@page "/jogo4"

<h1>Jogo</h1>

<div class="question-container">
    <p>@currentQuestion</p>
</div>

<div class="button-container">

    @foreach (var option in options)
    {
        <button class="option-button" @onclick="() => CheckAnswer(option)">
            @option
        </button>
    }
</div>

@if (!string.IsNullOrEmpty(message))
{
    <p>@message</p>
}

@code {
    private string currentQuestion = "Qual é a capital do Brasil?";
    private string message = "";
    private List<string> options = new List<string> { "Brasília", "Rio de Janeiro", "São Paulo", "Belém" };

    private void CheckAnswer(string selectedOption)
    {
        if (selectedOption == "Brasília")
        {
            message = "Parabéns! Você acertou!";
            NextQuestion();
        }
        else
        {
            message = "Ops! Resposta incorreta. Tente novamente!";
        }
    }

    private void NextQuestion()
    {
        currentQuestion = "Qual é a capital da França?";
        options = new List<string> { "Paris", "Londres", "Berlim", "Roma" };
        message = "";
    }
}

