<RadzenCard Class="rz-my-12 rz-mx-auto" Style="max-width: 420px">
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
        <RadzenStack Gap="0">
            <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 22px">Nome</RadzenText>
            <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 36px"><b>@(user.nome)</b></RadzenText>
        </RadzenStack>
    </RadzenStack>
    <RadzenCard Style="background-color: #28E1F6">
        <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 36px; color: white"><strong>7 anos</strong></RadzenText>
        <RadzenRow RowGap="0">
            <RadzenColumn SizeSM="4">
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 18px; color: white"> Adição </RadzenText>
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 22px"> <b>@(user.matematica.adi)</b></RadzenText>
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 18px; color: white"> Subtração </RadzenText>
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 22px"><b>@(user.matematica.sub)</b></RadzenText>
            </RadzenColumn>
            <RadzenColumn SizeSM="8">
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 18px; color: white"> Divisão </RadzenText>
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 22px"><b>@(user.matematica.div)</b></RadzenText>
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 18px; color: white"> Multiplicação </RadzenText>
                <RadzenText Style="font-family: 'Ubuntu', sans-serif; font-size: 22px"><b>@(user.matematica.mul)</b></RadzenText>
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
        <a href="/" class="rz-text-secondary-color">
            <RadzenButton Variant="Variant.Text" Text="Voltar" Style="color: black"/>
        </a>
    </RadzenStack>
</RadzenCard>

