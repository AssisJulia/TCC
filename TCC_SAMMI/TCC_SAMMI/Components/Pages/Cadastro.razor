@page "/cadastro"
@inject NavigationManager NavigationManager

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="caminho/para/sua/logo.png" alt="Logo" class="img-fluid"> <!-- Foto da logo -->
        </div>
        <div class="col-md-6">
            <h2>Cadastro</h2> <!-- Texto acima das caixas de texto -->
            <input type="text" class="form-control mb-3" placeholder="Nome"> <!-- Caixa de texto para o nome -->
            <input type="text" class="form-control mb-3" placeholder="E-mail"> <!-- Caixa de texto para o e-mail -->
            <input type="password" class="form-control mb-3" placeholder="Senha"> <!-- Caixa de texto para a senha -->
            <NavLink class="btn btn-primary btn-block mr-2" href="PosLogin">Casdastre-se</NavLink>
            <p>Já tem uma conta? <a href="#">Faça login aqui</a></p> <!-- Texto com link abaixo do botão -->
        </div>
    </div>
</div>

@code {
    private void Cadastrar()
    {
        // Lógica para cadastro

        // Após o cadastro bem-sucedido, navegue para a página PosLogin
        NavigationManager.NavigateTo("/PosLogin");
    }
}